{
  "name": "@nobbas/http-errors",
  "version": "2.0.0",
  "description": "Common errors to use / handles with express",
  "main": "dist/index.js",
  "files": [
    "dist/",
    "types/",
    "src/*",
    "tsconfig.json",
    "tslint.json"
  ],
  "engines": {
    "node": ">=10.0.0 <11.0.0",
    "npm": ">=6.0.0 <7.0.0 "
  },
  "types": "types/index.d.ts",
  "scripts": {
    "prepack": "npm run build",
    "test": "mocha -r ts-node/register test/**/*.test.ts",
    "build:ts": "tsc",
    "watch:ts": "tsc -w",
    "clean": "rimraf dist types *.tgz",
    "build": "npm-run-all clean build:ts",
    "serve": "nodemon --watch dist/ dist/index.js",
    "start": "npm-run-all clean build serve",
    "start:dev": "concurrently \"npm run watch:ts\" \"npm run serve\""
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Nobbas/http-errors.git"
  },
  "keywords": [
    "nodejs",
    "typescript"
  ],
  "author": "Nobbas Inc.",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/Nobbas/http-errors/issues"
  },
  "homepage": "https://github.com/Nobbas/http-errors#readme",
  "dependencies": {
    "i18n": "^0.8.3",
    "npm-run-all": "^4.1.5",
    "typescript": "^3.5.2"
  },
  "devDependencies": {
    "nodemon": "^1.19.1",
    "@types/i18n": "^0.8.5",
    "@types/chai": "^4.2.2",
    "@types/mocha": "^5.2.7",
    "@types/node": "^12.7.4",
    "chai": "^4.2.0",
    "concurrently": "^4.1.0",
    "mocha": "^6.2.0",
    "rimraf": "^2.6.3",
    "ts-node": "^8.3.0",
    "tslint": "^5.17.0",
    "tslint-config-airbnb": "^5.11.1",
    "tslint-eslint-rules": "^5.4.0"
  }
}
